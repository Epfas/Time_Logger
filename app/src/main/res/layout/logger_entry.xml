<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#CDDC39"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible">

    <TextView
        android:id="@+id/laMainProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_line"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/laMainProjectCode"
        app:layout_constraintTop_toBottomOf="@+id/laMainTaskDescription"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Project Name" />

    <TextView
        android:id="@+id/laMainTime"
        android:layout_width="94dp"
        android:layout_height="16dp"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginTop="4dp"
        android:textAlignment="textEnd"

        android:textSize="@dimen/text_line"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/laMainTaskDescription"
        tools:text="--:-- / --:--" />

    <TextView
        android:id="@+id/laMainTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginStart="41dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnStartLoggerEntry"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Task Description" />

    <TextView
        android:id="@+id/laMainProjectCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginStart="88dp"
        android:textSize="@dimen/text_line"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStartLoggerEntry"
        app:layout_constraintTop_toBottomOf="@+id/laMainTaskDescription"
        app:layout_constraintVertical_bias="1.0"
        tools:text="P000" />


    <ImageButton
        android:id="@+id/btnStartLoggerEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_media_play" />

</androidx.constraintlayout.widget.ConstraintLayout>